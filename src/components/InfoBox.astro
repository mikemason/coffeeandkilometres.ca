---
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: 'border-blue-500 bg-blue-50 dark:bg-blue-950/30 text-blue-900 dark:text-blue-100',
  warning: 'border-amber-500 bg-amber-50 dark:bg-amber-950/30 text-amber-900 dark:text-amber-100',
  tip: 'border-emerald-500 bg-emerald-50 dark:bg-emerald-950/30 text-emerald-900 dark:text-emerald-100',
  danger: 'border-red-500 bg-red-50 dark:bg-red-950/30 text-red-900 dark:text-red-100',
};

const icons = {
  info: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  warning: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z',
  tip: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  danger: 'M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
};
---

<div class={`border-l-4 p-4 my-6 rounded-r ${styles[type]}`}>
  <div class="flex gap-3">
    <svg class="w-6 h-6 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[type]}></path>
    </svg>
    <div class="flex-1">
      {title && <div class="font-semibold mb-1">{title}</div>}
      <div class="text-sm">
        <slot />
      </div>
    </div>
  </div>
</div>
