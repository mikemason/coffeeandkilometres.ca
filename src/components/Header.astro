---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { label: 'Guides', href: '/guides' },
  { label: 'Blog', href: '/blog' },
  { label: 'Gallery', href: '/gallery' },
  { label: 'About', href: '/about' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-[rgb(var(--color-border))] sticky top-0 bg-[rgb(var(--color-bg))]/80 backdrop-blur-md z-50">
  <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-xl font-bold tracking-tight hover:text-[rgb(var(--color-accent))] transition-colors">
      Coffee & Kilometres
    </a>

    <div class="flex items-center gap-6">
      <ul class="hidden md:flex items-center gap-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={`transition-colors ${
                currentPath.startsWith(item.href)
                  ? 'text-[rgb(var(--color-accent))] font-medium'
                  : 'text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-text))]'
              }`}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <ThemeToggle />

      <button
        id="mobile-menu-toggle"
        class="md:hidden p-2 hover:bg-[rgb(var(--color-border))] rounded"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <div id="mobile-menu" class="hidden md:hidden border-t border-[rgb(var(--color-border))]">
    <ul class="px-4 py-4 space-y-3">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class={`block py-2 transition-colors ${
              currentPath.startsWith(item.href)
                ? 'text-[rgb(var(--color-accent))] font-medium'
                : 'text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-text))]'
            }`}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
