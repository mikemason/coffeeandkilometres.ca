---
import Layout from '../layouts/Layout.astro';
import Gallery from '../components/Gallery.astro';

const dempsterImages = [
  { src: '/images/dempster-hero.jpg', alt: 'Dempster Highway landscape', caption: 'The Dempster Highway' },
  { src: '/images/dempster-1.jpg', alt: 'Dempster Highway scene' },
  { src: '/images/dempster-2.jpg', alt: 'Dempster Highway landscape' },
  { src: '/images/dempster-3.jpg', alt: 'Dempster Highway mountains' },
  { src: '/images/dempster-4.jpg', alt: 'Dempster Highway terrain' },
  { src: '/images/blackstone-horses.jpg', alt: 'Horses at Blackstone River', caption: 'Our neighbors at the Blackstone' },
];
---

<Layout
  title="Gallery"
  description="Photos from the road - landscapes, campsites, and moments from overlanding adventures."
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="mb-12">
      <h1 class="text-5xl font-bold mb-4">Photo Gallery</h1>
      <p class="text-xl text-[rgb(var(--color-text-muted))]">
        Landscapes, campsites, and moments from the road.
      </p>
    </header>

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-6">Dempster Highway</h2>
      <Gallery images={dempsterImages} columns={3} />
    </section>
  </div>
</Layout>
